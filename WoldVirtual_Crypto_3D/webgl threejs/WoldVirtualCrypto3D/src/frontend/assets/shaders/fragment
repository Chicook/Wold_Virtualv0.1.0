// filepath: metaverse-crypto-3d/src/frontend/assets/shaders/fragment
precision mediump float;

uniform vec3 uColor;
uniform float uTime;

varying vec2 vUv;

void main() {
    vec3 color = uColor * 0.5 + 0.5 * vec3(sin(uTime + vUv.x * 10.0), sin(uTime + vUv.y * 10.0), sin(uTime));
    gl_FragColor = vec4(color, 1.0);
}