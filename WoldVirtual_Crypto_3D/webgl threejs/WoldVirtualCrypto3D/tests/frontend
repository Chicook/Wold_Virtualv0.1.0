// filepath: metaverse-crypto-3d/tests/frontend/index.test.js
import React from 'react';
import { render, screen } from '@testing-library/react';
import MetaverseScene from '../../src/frontend/components/MetaverseScene';
import Avatar from '../../src/frontend/components/Avatar';
import HUD from '../../src/frontend/components/UI/HUD';
import Menu from '../../src/frontend/components/UI/Menu';
import Chat from '../../src/frontend/components/UI/Chat';

describe('Frontend Components', () => {
  test('renders MetaverseScene component', () => {
    render(<MetaverseScene />);
    const sceneElement = screen.getByTestId('metaverse-scene');
    expect(sceneElement).toBeInTheDocument();
  });

  test('renders Avatar component', () => {
    render(<Avatar />);
    const avatarElement = screen.getByTestId('avatar');
    expect(avatarElement).toBeInTheDocument();
  });

  test('renders HUD component', () => {
    render(<HUD />);
    const hudElement = screen.getByTestId('hud');
    expect(hudElement).toBeInTheDocument();
  });

  test('renders Menu component', () => {
    render(<Menu />);
    const menuElement = screen.getByTestId('menu');
    expect(menuElement).toBeInTheDocument();
  });

  test('renders Chat component', () => {
    render(<Chat />);
    const chatElement = screen.getByTestId('chat');
    expect(chatElement).toBeInTheDocument();
  });
});